<div id="summary">
  <% @reports.map do |report| %>
    <div class="pickup-report">
      <div class="edit">
      <i class="fi-page-edit"> </i>
      </div>
      <span class="report_id"> <%= report.id %> </span>
      <div class="pickup-user">
        <span class="user_name" user-id="<%= report.pickup.user.id %>">
            <%= report.pickup.user.name %>
        </span>
      </div>
      <div class="data clearfix">
        <div class="reports right">
          <% report.supplier_reports.map do |supp_report| %>
            <div class="supplier-report">
              <div class="supplier-name"> <%= supp_report.supplier.name %> </div>
              <% supp_report.food_type_reports.map do |food_type_report| %>
                <div class="food-type-report">
                  <span class="food-type-report-name"><%= food_type_report.name %></span>
                  <% food_type_report.container_reports.map do |container_report| %>
                    <% next if !container_report.collected_any? %>
                    <div class="container-report clearfix">
                      <span class="container-report-name right"><%= container_report.container.name %></span>
                      <span class="container-report-quantity left"><%= container_report.quantity %></span>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="actions left">
            <div class="approval unapprove red <% 'selected' if report.pickup.approved? %>" data-approval="unapprove" data-report-id="<%= report.id %>" data-pickup-id="<%= report.pickup.id %>">
               <div>
                <div class="status-icon fi-x"> </div>
                <div class="text"> לא לאשר </div>
              </div>
            </div>
            <div class="approval approve green  <% 'selected' if !report.pickup.approved? %>" data-approval="approve" data-report-id="<%= report.id %>" data-pickup-id="<%= report.pickup.id %>">
              <div>
                <div class="status-icon fi-check"> </div>
                <div class="text"> אישור </div>
              </div>
            </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
